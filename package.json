{
  "name": "@arlequins/beat-js-slider",
  "version": "1.0.1",
  "description": "beat-js-slider modules",
  "main": "dist/beat-js-slider.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12.21.0"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "typescript",
    "slider",
    "beat"
  ],
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "./jest/set-timeout.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/arlequins/beat-js-slider.git"
  },
  "directories": {
    "doc": "docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm install && npm run lint && npm test && npm run build",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        240
      ]
    }
  },
  "scripts": {
    "test": "jest --collect-coverage --detectOpenHandles",
    "build": "npm run test && webpack --mode=production",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "deploy": "npm publish"
  },
  "author": "An <harlequin.beat@gmail.com> (https://github.com/arlequins)",
  "bugs": {
    "url": "https://github.com/arlequins/beat-js-slider#readme"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-strict-mode": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.19",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "commitlint": "^11.0.0",
    "core-js": "^3.8.2",
    "es6-promise-promise": "^1.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.14",
    "tslib": "^2.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.2.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "css-loader": "^5.0.1",
    "mini-css-extract-plugin": "^1.3.3"
  },
  "dependencies": {}
}
